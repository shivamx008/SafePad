<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stopnjot">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StopNJot">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity">

        </activity>

        <activity android:name=".SignupActivity">

        </activity>

        <activity
            android:name=".UserActivity"
            android:theme="@style/Theme.UserActivity"
            android:label="@string/user_screen_label">
        </activity>

        <activity android:name=".NotesActivity"
            android:theme="@style/Theme.UserActivity"
            android:label="@string/note_screen_label">
        </activity>

        <activity android:name=".AddNoteActivity">

        </activity>

        <activity android:name=".EditNoteActivity">

        </activity>

        <activity android:name=".PasswordActivity"
            android:theme="@style/Theme.UserActivity"
            android:label="@string/password_screen_label">
        </activity>

        <activity android:name=".GeneratePasswordActivity">

        </activity>

        <activity android:name=".ViewOrDeletePassword">

        </activity>
    </application>

</manifest>